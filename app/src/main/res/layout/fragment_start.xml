<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height=""-->
<!--            android:src="@drawable/lisva"/>-->

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="@dimen/_152sdp"
            android:layout_height="@dimen/_152sdp"
            android:src="@drawable/planet"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.514" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="@dimen/_283sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_height="@dimen/_302sdp"
            android:background="@drawable/start_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="@dimen/_263sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosansbold"
                    android:gravity="center"
                    android:textColor="@color/quantum_white_100"
                    android:text="Создавайте события и ищите новых друзей!"
                    android:textSize="@dimen/_27sdp"
                    app:layout_constraintBottom_toTopOf="@+id/nextBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nextBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_42sdp"
                    android:layout_marginEnd="@dimen/_42sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/get_started_btn"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Начнем"
                    android:textAllCaps="false"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="TextSizeCheck"
                    tools:layout_editor_absoluteX="78dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
