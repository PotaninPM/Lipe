<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_223sdp"
            android:src="@drawable/forest"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout6" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_352sdp"
            android:background="@drawable/start_fieds"
            app:layout_constraintBottom_toBottomOf="parent">
                <TextView
                    android:layout_width="@dimen/_273sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitosansbold"
                    android:gravity="center"
                    android:text="Создавайте события и ищите новых друзей!"
                    android:textSize="@dimen/_27sdp"
                    app:layout_constraintBottom_toTopOf="@+id/nextBtn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/nextBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="@dimen/_42sdp"
                    android:layout_marginEnd="@dimen/_42sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:background="@drawable/get_started_btn"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Начнем"
                    android:textAllCaps="false"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_15sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="TextSizeCheck"
                    tools:layout_editor_absoluteX="78dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
