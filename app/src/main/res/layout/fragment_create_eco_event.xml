<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    tools:context=".create_events.event_eco.CreateEcoEventFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_210sdp"
                android:fillViewport="true"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/photo_lay_1"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_210sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@drawable/upload_photo_event">
                        <ImageView
                            android:id="@+id/photo1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:id="@+id/arrowUp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/img_arrowup"
                            app:layout_constraintBottom_toTopOf="@+id/textImg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Нажмите, чтобы загрузить фото"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/photo_lay_2"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_210sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@drawable/upload_photo_event">

                        <ImageView
                            android:id="@+id/photo2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <ImageView
                            android:id="@+id/arrowUp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/img_arrowup"
                            app:layout_constraintBottom_toTopOf="@+id/textImg1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textImg1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Нажмите, чтобы загрузить фото"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/photo_lay_3"
                        android:layout_width="@dimen/_290sdp"
                        android:layout_height="@dimen/_210sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:background="@drawable/upload_photo_event">

                        <ImageView
                            android:id="@+id/photo3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:id="@+id/arrowUp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/img_arrowup"
                            app:layout_constraintBottom_toTopOf="@+id/textImg2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textImg2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Нажмите, чтобы загрузить фото"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:id="@+id/lineVectorOne"
                android:layout_width="@dimen/_286sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="#959494"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lineVectorOne">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Детали события"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etNameinputLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_gravity="center"
                    app:errorEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNameinput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Введите название события"
                        android:inputType="text"
                        android:singleLine="true"
                        tools:ignore="Autofill" />
                </com.google.android.material.textfield.TextInputLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dateLay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_42sdp"
                    android:orientation="horizontal"
                    android:gravity="start"
                    android:background="@drawable/choose_date_lay"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp">

                    <TextView
                        android:id="@+id/notify_set_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/_13sdp"
                        android:text="Нажмите, чтобы установить дату встречи"/>

                    <TextView
                        android:id="@+id/timeText"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:fontFamily="@font/nunitosansextrabold"
                        android:text="13:25"
                        android:textSize="@dimen/_20sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/dateText"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunitosansregular"
                        android:text="25 октября 2024 года"
                        android:textSize="@dimen/_16sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/timeText"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/pollutionSpinnerLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:hint="Уровень загрязнения"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp">
                    <AutoCompleteTextView
                        android:id="@+id/pollutionSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etMinInputLay"
                        android:layout_width="@dimen/_133sdp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:layout_gravity="start"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMinInputText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Мин. людей"
                            android:gravity="center"
                            android:inputType="number"
                            android:singleLine="true"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/etMaxInputLay"
                        android:layout_width="@dimen/_133sdp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        app:errorEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etMaxInputText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Макс. людей"
                            android:inputType="number"
                            android:gravity="center"
                            android:singleLine="true"
                            android:textColorHint="@color/quantum_black_100"
                            tools:ignore="Autofill" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etDescInputLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_gravity="center"
                    app:errorEnabled="true"
                    app:boxStrokeColor="?attr/colorControlNormal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescInputText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_140sdp"
                        android:hint="Подробное описание события"
                        android:inputType="textMultiLine"
                        android:gravity="top"
                        android:singleLine="true"
                        android:textColor="#FFFFFF" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreateEvent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/sign_in_start_btn"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:text="Создать событие"
                    android:textAllCaps="false"
                    android:textColor="@color/quantum_white_100"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>