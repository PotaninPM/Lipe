<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".GetPointsFragment">
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearGetpoints"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <TextView android:ellipsize="end"
            android:gravity="center_horizontal"
            android:id="@+id/txtFortySix"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/poppins"
            android:textFontWeight="700"
            android:textSize="@dimen/_24sdp"
            android:text="Получение баллов"
            android:textStyle="bold" />
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearTab"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/change_event_back">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEco"
                android:background="@drawable/create_event_change_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingStart="@dimen/_18sdp"
                android:paddingEnd="@dimen/_18sdp"
                android:singleLine="true"
                android:text="Экология"
                android:textAllCaps="false"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
        <TextView android:gravity="center_horizontal"
            android:id="@+id/txtDescription"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_11pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent"
            android:text="Внимание! Баллы за волонтерство и соревнования начисляются автоматически, если вы были зарегистрированы на мероприятие" />
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:fillViewport="true"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_2sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/photo_lay_1"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:background="@drawable/upload_photo_event">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/img_arrowup" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:gravity="center"
                            android:text="Нажмите, чтобы загрузить фото \n(минимум одно)"
                            android:textColor="#747373"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photo_lay_2"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:background="@drawable/upload_photo_event">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/img_arrowup" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:gravity="center"
                            android:text="Нажмите, чтобы загрузить фото\n(минимум одно)"
                            android:textColor="#747373"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photo_lay_3"
                    android:layout_width="@dimen/_260sdp"
                    android:layout_height="@dimen/_180sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:background="@drawable/upload_photo_event">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/img_arrowup" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:gravity="center"
                            android:text="Нажмите, чтобы загрузить фото\n(минимум одно)"
                            android:textColor="#747373"
                            android:textSize="@dimen/_14sdp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearChoose"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_11pxh"
            android:layout_marginStart="@dimen/_11pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtFortyEight"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:text="Выберите вид выполненной работы" />
            <androidx.appcompat.widget.AppCompatSpinner
                android:background="@drawable/mult_list"
                android:id="@+id/spinnerFields"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"/>
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btn10" android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_11pxh"
                android:layout_marginStart="@dimen/_11pxh"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_18pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:textColor="@color/white"
                android:background="@drawable/create_event_change_type_btn"
                android:paddingTop="@dimen/_18pxv" android:singleLine="true"
                android:text="Получить баллы" android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>